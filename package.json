{
  "name": "whatsapp",
  "version": "1.2.0",
  "description": "An unofficial whatsapp client for Linux",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package": "./build.sh",
    "generate:icons": "./ico.sh",
    "build:snap": "electron-builder --linux snap"
  },
  "repository": "https://github.com/olubunmitosin/whatsapp",
  "build": {
    "win": {
      "target": "nsis",
      "icon":"./images/icons/win/icon.ico"
    },
    "nsis":{
      "oneClick": false
    },
    "dmg": {
      "icon": "./images/icons/mac/icon.icns"
    },
    "linux": {
      "icon": "./images/icons/png/256x256.png",
      "category": "social"
    }
  },
  "keywords": [
    "Electron",
    "Whatsapp",
    "social life",
    "social networking",
    "social"
  ],
  "author": "Olubunmi Tosin",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^8.2.0",
    "electron-builder": "^22.4.1"
  }
}
